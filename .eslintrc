{
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"jest": true,
		"commonjs": true
	},
	"extends": [ "eslint:recommended", "plugin:react/recommended", "plugin:flowtype/recommended" ],
	"plugins": [ "react", "flowtype" ],
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"ecmaFeatures": {
			"globalReturn": false,
			"impliedStrict": true,
			"jsx": true,
			"experimentalObjectRestSpread": true
		}
	},
	"parser": "babel-eslint",
	"rules": {
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-console": 0,
		"strict": 1
	}
}